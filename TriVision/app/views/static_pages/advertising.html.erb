<div class="center jumbotron">
    <h2>Advertising Channels</h2>
    
    
    <h3>Communities:</h3>
    <li>
      <p>Joining and participate in the following communities to reach more potential users:</p>
    </li>
    
    <% @communities.each do |profile| %>
    <div class="wrap">

        <div class="row">
          <div class="col-md-4">
              Profile pic: <img src="<%= profile['raw_profile']['profile_image_url'] =%>" height="35" width="35"/></img>
		  </div>    
	      <div class="col-md-4">
              Name: <span><%= profile['raw_profile']['name'] =%> (@<%= profile['raw_profile']['screen_name'] =%>)</span>
	      </div>
          <div class="col-md-4">
              Location: <span><%= profile['raw_profile']['location'] =%></span>
	      </div>
        </div>


	    <div class="row">
          <div class="col-md-4">    
              Description: <span><%= profile['raw_profile']['description'] =%></span>
	 	  </div>
          <div class="col-md-4">    
              Description: <span><%= profile['raw_profile']['description'] =%></span>
	      </div>
          <div class="col-md-4">    
              %_of_their_followers_who_follow_me: <span><%= (profile['%_of_their_followers_who_follow_me']*(1000.0)).round / 10.0 =%></span>

              %_of_my_followers_who_follow_them: <span><%= (profile['%_of_my_followers_who_follow_them']*(1000.0)).round / 10.0 =%></span>
	      </div>
	    </div>

	    <div class="row">
          <div class="col-md-6"> 
              Wordcloud pic: <img src="/assets/<%= profile['id'] =%>.wordcloud.png" height="150" width="150"></img>
		  </div>
		  <div class="col-md-6">	  
              User profiles pic: <img src="/assets/<%= profile['id'] =%>.profiles.jpg" height="150" width="150"></img>
		  </div>	
		</div>  
	</div>	  

    <% end %>

    
      
    <!-- <%= @master_json =%> -->

</div>  
